
.container {
	background-color: #F8F7F2;
	min-height: 100vh;
	background-image: url(data:image/png;base64,//4vACoAIAC4fiBfuX4GdMyAb2ZgU01PJnsgACoALwANAAoA);
	background-repeat: repeat;
	padding-bottom: 100rpx; /* 为底部输入框留出空间 */
}
.post-detail {
	padding: 30rpx;
}
.post-main {
	background-color: #FFFFFF;
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
	margin-bottom: 30rpx;
	border: 1rpx solid rgba(224, 201, 209, 0.5);
}
.author-row {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}
.author-avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 40rpx;
	margin-right: 15rpx;
	border: 2rpx solid rgba(126, 196, 207, 0.3);
}
.author-info {
	flex: 1;
}
.author-name {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 4rpx;
	font-family: "KaiTi", "FangSong";
}
.post-time {
	font-size: 24rpx;
	color: #999;
}
.follow-btn {
	background-color: #7EC4CF;
	color: white;
	font-size: 24rpx;
	padding: 0 20rpx;
	height: 50rpx;
	line-height: 50rpx;
	border-radius: 25rpx;
	margin-left: 20rpx;
}
.post-content {
	margin-bottom: 20rpx;
}
.post-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 15rpx;
	display: block;
	font-family: "FangSong", serif;
}
.post-text {
	font-size: 30rpx;
	color: #333;
	line-height: 1.6;
	margin-bottom: 20rpx;
	display: block;
	font-family: "SimSun", serif;
}
.post-images {
	margin-bottom: 20rpx;
}
.post-image {
	width: 100%;
	border-radius: 10rpx;
	margin-bottom: 20rpx;
	border: 1rpx solid rgba(224, 201, 209, 0.3);
}
.post-tags {
	display: flex;
	flex-wrap: wrap;
	margin-bottom: 20rpx;
}
.tag {
	background-color: rgba(126, 196, 207, 0.1);
	color: #7EC4CF;
	font-size: 24rpx;
	padding: 6rpx 20rpx;
	border-radius: 30rpx;
	margin-right: 15rpx;
	margin-bottom: 10rpx;
}
.post-actions {
	display: flex;
	border-top: 1rpx solid #F0F0F0;
	padding-top: 20rpx;
}
.action-item {
	display: flex;
	align-items: center;
	margin-right: 40rpx;
}
.action-icon {
	width: 36rpx;
	height: 36rpx;
	margin-right: 8rpx;
}
.action-item text {
	font-size: 24rpx;
	color: #666;
}
.comments-section {
	background-color: #FFFFFF;
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
	border: 1rpx solid rgba(224, 201, 209, 0.5);
}
.section-header {
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 20rpx;
	border-bottom: 1rpx solid #F0F0F0;
	padding-bottom: 16rpx;
}
.section-title-decoration {
	width: 24rpx;
	height: 24rpx;
	margin: 0 10rpx;
}
.section-title {
	font-family: "Source Han Serif CN", "FangSong", serif;
	font-size: 32rpx;
	color: #333;
	font-weight: bold;
	letter-spacing: 4rpx;
}
.comments-list {
	padding: 10rpx 0;
}
.comment-item {
	display: flex;
	margin-bottom: 30rpx;
}
.comment-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 30rpx;
	margin-right: 15rpx;
}
.comment-content {
	flex: 1;
	background-color: #F8F8F8;
	border-radius: 10rpx;
	padding: 15rpx;
}
.comment-header {
	display: flex;
	justify-content: space-between;
	margin-bottom: 10rpx;
}
.comment-username {
	font-size: 26rpx;
	font-weight: bold;
	color: #333;
}
.comment-time {
	font-size: 22rpx;
	color: #999;
}
.comment-text {
	font-size: 28rpx;
	color: #333;
	line-height: 1.5;
	margin-bottom: 10rpx;
}
.comment-actions {
	display: flex;
	justify-content: flex-end;
}
.comment-action {
	display: flex;
	align-items: center;
	margin-left: 20rpx;
}
.action-icon-small {
	width: 28rpx;
	height: 28rpx;
	margin-right: 6rpx;
}
.comment-action text {
	font-size: 22rpx;
	color: #999;
}
.reply-action text {
	color: #7EC4CF;
}
.comment-input-area {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background-color: #FFF;
	padding: 20rpx;
	display: flex;
	align-items: center;
	border-top: 1rpx solid #F0F0F0;
	box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
	box-sizing: border-box;
}
.comment-input {
	flex: 1;
	height: 70rpx;
	background-color: #F5F5F5;
	border-radius: 35rpx;
	padding: 0 20rpx;
	font-size: 28rpx;
}
.send-comment-btn {
	width: 120rpx;
	height: 70rpx;
	background-color: #7EC4CF;
	border-radius: 35rpx;
	color: #FFF;
	font-size: 28rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-left: 20rpx;
	font-family: "KaiTi", "FangSong";
}

