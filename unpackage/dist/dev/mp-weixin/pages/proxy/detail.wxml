<view class="container"><custom-nav-bar vue-id="24ca6f5b-1" title="任务详情" subtitle="任务信息" show-back="{{true}}" bind:__l="__l"></custom-nav-bar><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-button" bindtap="__e"><text class="back-arrow">←</text><text class="back-text">返回</text></view><block wx:if="{{isLoading}}"><view class="loading-container"><view class="loading-spinner"></view><text class="loading-text">加载中...</text></view></block><block wx:else><block wx:if="{{!task}}"><view class="empty-container"><text class="empty-text">未找到任务</text><button data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="return-button" bindtap="__e">返回任务列表</button></view></block><block wx:else><view class="task-detail"><view class="detail-card"><view class="card-header"><view class="{{$root.m0}}">{{$root.m1}}</view><view class="task-price">悬赏:<text class="price-amount">{{"¥"+task.price}}</text></view></view><view class="task-route"><view class="task-pickup"><text class="location-icon pickup">取</text><text class="location-text">{{task.pickupAddress}}</text></view><view class="route-arrow">↓</view><view class="task-delivery"><text class="location-icon delivery">送</text><text class="location-text">{{task.deliveryAddress}}</text></view></view></view><view class="detail-card"><view class="section-title">详细信息</view><view class="info-item"><text class="info-label">发布者：</text><text class="info-value">{{task.publisherName||'匿名用户'}}</text></view><view class="info-item"><text class="info-label">联系电话：</text><text class="info-value">{{task.publisherPhone||'暂无'}}</text></view><view class="info-item"><text class="info-label">取件备注：</text><text class="info-value">{{task.pickupNote||'无'}}</text></view><view class="info-item"><text class="info-label">物品描述：</text><text class="info-value">{{task.itemDescription||'无'}}</text></view><view class="info-item"><text class="info-label">发布时间：</text><text class="info-value">{{$root.m2}}</text></view></view><view class="actions-card"><block wx:if="{{task.status==='WAITING'}}"><button data-event-opts="{{[['tap',[['acceptTask',['$event']]]]]}}" class="action-button accept" bindtap="__e">接受任务</button></block><button data-event-opts="{{[['tap',[['deleteTask',['$event']]]]]}}" class="action-button delete" bindtap="__e">删除任务</button></view></view></block></block><ai-assistant vue-id="24ca6f5b-2" bind:__l="__l"></ai-assistant></view>