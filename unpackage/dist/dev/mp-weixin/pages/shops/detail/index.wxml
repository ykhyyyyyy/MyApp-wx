<view class="container"><custom-nav-bar vue-id="39a46987-1" title="店铺详情" subtitle="Shop Detail" show-back="{{true}}" bind:__l="__l"></custom-nav-bar><view class="shop-detail"><view class="shop-header"><image class="shop-banner" src="{{shop.banner}}" mode="aspectFill"></image><view class="shop-info-box"><image class="shop-logo" src="{{shop.logo}}" mode="aspectFill"></image><view class="shop-info"><text class="shop-name">{{shop.name}}</text><view class="shop-rating"><text class="rating-score">{{shop.rating}}</text><view class="rating-stars"><block wx:for="{{5}}" wx:for-item="n" wx:for-index="__i0__" wx:key="*this"><text class="{{['star',(n<=$root.g0)?'active':'']}}">★</text></block></view><text class="rating-count">{{shop.ratingCount+"条评价"}}</text></view><view class="shop-badges"><block wx:if="{{shop.isOfficial}}"><text class="badge official">官方认证</text></block><block wx:if="{{shop.isRecommended}}"><text class="badge recommended">推荐店铺</text></block></view></view></view><view class="shop-action-bar"><view data-event-opts="{{[['tap',[['followShop',['$event']]]]]}}" class="action-item" bindtap="__e"><image class="action-icon" src="{{shop.followed?'/static/icons/heart-filled.png':'/static/icons/heart.png'}}"></image><text>{{shop.followed?'已关注':'关注'}}</text></view><view data-event-opts="{{[['tap',[['shareShop',['$event']]]]]}}" class="action-item" bindtap="__e"><image class="action-icon" src="/static/icons/share.png"></image><text>分享</text></view></view></view><view class="shop-section"><view class="section-header"><image class="section-title-decoration" src="/static/decoration/title-left.png" mode="aspectFit"></image><text class="section-title">店铺介绍</text><image class="section-title-decoration" src="/static/decoration/title-right.png" mode="aspectFit"></image></view><text class="shop-description">{{shop.description}}</text></view><view class="shop-section"><view class="section-header"><image class="section-title-decoration" src="/static/decoration/title-left.png" mode="aspectFit"></image><text class="section-title">精选商品</text><image class="section-title-decoration" src="/static/decoration/title-right.png" mode="aspectFit"></image></view><view class="product-list"><block wx:for="{{shop.products}}" wx:for-item="product" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['viewProduct',['$0'],[[['shop.products','',index]]]]]]]}}" class="product-card" bindtap="__e"><image class="product-image" src="{{product.image}}" mode="aspectFill"></image><text class="product-name">{{product.name}}</text><text class="product-price">{{"¥"+product.price}}</text></view></block></view><view class="more-btn-container"><button data-event-opts="{{[['tap',[['viewAllProducts',['$event']]]]]}}" class="more-btn" bindtap="__e">查看全部商品</button></view></view></view></view>