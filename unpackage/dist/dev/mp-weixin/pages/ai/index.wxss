.ai-content {
	padding: 30rpx;
}
.ai-header {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 40rpx;
}
.ai-header-image {
	width: 120rpx;
	height: 120rpx;
	margin-bottom: 20rpx;
}
.ai-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	font-family: "FangSong", serif;
	margin-bottom: 10rpx;
}
.ai-subtitle {
	font-size: 24rpx;
	color: #666;
}
.chat-container {
	background-color: #FFFFFF;
	border-radius: 20rpx;
	padding: 20rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
	margin-bottom: 30rpx;
	border: 1rpx solid rgba(224, 201, 209, 0.5);
}
.chat-messages {
	height: 600rpx;
	margin-bottom: 20rpx;
}
.message {
	display: flex;
	margin-bottom: 30rpx;
}
.message-avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 40rpx;
	border: 2rpx solid #E0C9D1;
}
.message-content {
	max-width: 70%;
	padding: 20rpx;
	border-radius: 16rpx;
	margin: 0 20rpx;
}
.ai .message-content {
	background-color: #EEE9E1;
}
.user {
	flex-direction: row-reverse;
}
.user .message-content {
	background-color: #D6E4C9;
}
.message-text {
	font-size: 28rpx;
	line-height: 1.5;
	color: #333;
}
.chat-input-area {
	display: flex;
	border-top: 1rpx solid #F0F0F0;
	padding-top: 20rpx;
}
.chat-input {
	flex: 1;
	height: 80rpx;
	background-color: #F8F8F8;
	border-radius: 40rpx;
	padding: 0 30rpx;
	font-size: 28rpx;
}
.send-btn {
	width: 120rpx;
	height: 80rpx;
	background-color: #7EC4CF;
	color: #FFFFFF;
	border-radius: 40rpx;
	margin-left: 20rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
}
.ai-features {
	background-color: #FFFFFF;
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
	border: 1rpx solid rgba(224, 201, 209, 0.5);
}
.feature-title {
	font-size: 32rpx;
	color: #333;
	margin-bottom: 20rpx;
	font-weight: bold;
	font-family: "FangSong", serif;
	border-bottom: 1rpx solid #F0F0F0;
	padding-bottom: 16rpx;
}
.feature-items {
	display: flex;
	flex-wrap: wrap;
	gap: 20rpx;
}
.feature-item {
	width: calc(50% - 10rpx);
	background-color: #F5F5F5;
	padding: 20rpx;
	border-radius: 10rpx;
	text-align: center;
	font-size: 28rpx;
	color: #333;
}

