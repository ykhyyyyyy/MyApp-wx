/* 搜索框 */
.search-box {
	padding: 0 30rpx 20rpx;
}
.search-input-wrapper {
	display: flex;
	align-items: center;
	background: #fff;
	border-radius: 30rpx;
	padding: 0 20rpx;
	border: 1rpx solid #e0c9d1;
	box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}
