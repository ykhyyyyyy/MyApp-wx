<view class="container"><custom-nav-bar vue-id="5c5bee2c-1" title="商品详情" subtitle="Product Detail" show-back="{{true}}" bind:__l="__l"></custom-nav-bar><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-button" bindtap="__e"><text class="back-arrow">←</text><text class="back-text">返回</text></view><block wx:if="{{loading}}"><view class="loading-container"><view class="loading-spinner"></view><text class="loading-text">加载中...</text></view></block><block wx:else><block wx:if="{{!product}}"><view class="empty-container"><text class="empty-text">未找到该商品</text><button data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="return-button" bindtap="__e">返回商城</button></view></block><block wx:else><view class="product-container"><block wx:if="{{$root.g0>0}}"><swiper class="product-swiper" circular="{{true}}" indicator-dots="{{true}}" autoplay="{{true}}"><block wx:for="{{productImages}}" wx:for-item="img" wx:for-index="index" wx:key="index"><swiper-item><image class="product-image" src="{{img}}" mode="aspectFill" data-event-opts="{{[['tap',[['previewImage',['$0','$1'],[[['productImages','',index]],'productImages']]]]]}}" bindtap="__e"></image></swiper-item></block></swiper></block><block wx:else><image class="product-image-single" src="{{product.avatar||product.image||'https://ykhyyy.oss-cn-beijing.aliyuncs.com/MyApp/default-product.png'}}" mode="aspectFill"></image></block><view class="product-info-card"><text class="product-price">{{"¥ "+(product.price||'0.00')}}</text><text class="product-name">{{product.name||'无名商品'}}</text><view class="product-stats"><text class="product-sales">{{"销量: "+(product.sales||product.stock||0)}}</text><text class="product-rating">{{"评分: "+(product.rating||'暂无评分')}}</text></view></view><view class="product-detail-card"><view class="card-header"><view class="header-line"></view><text class="header-text">商品详情</text><view class="header-line"></view></view><view class="product-description"><text class="description-text">{{product.description||'暂无商品详情'}}</text></view><block wx:if="{{$root.g1>0}}"><view class="detail-images"><block wx:for="{{detailImages}}" wx:for-item="img" wx:for-index="index" wx:key="index"><image class="detail-image" src="{{img}}" mode="widthFix"></image></block></view></block></view><block wx:if="{{product.shopId}}"><view data-event-opts="{{[['tap',[['viewShop',['$0'],['product.shopId']]]]]}}" class="shop-info-card" bindtap="__e"><view class="shop-header"><image class="shop-avatar" src="{{product.shopAvatar||'https://ykhyyy.oss-cn-beijing.aliyuncs.com/MyApp/default-shop.png'}}"></image><view class="shop-text"><text class="shop-name">{{product.shopName||'未知店铺'}}</text><text class="shop-subtitle">查看店铺更多商品 ></text></view></view></view></block><view class="bottom-actions"><view class="action-container"><view class="action-buttons"><button data-event-opts="{{[['tap',[['showNotImplemented',['$event']]]]]}}" class="action-button add-cart" bindtap="__e">加入购物车</button><button data-event-opts="{{[['tap',[['showNotImplemented',['$event']]]]]}}" class="action-button buy-now" bindtap="__e">立即购买</button></view></view></view></view></block></block></view>