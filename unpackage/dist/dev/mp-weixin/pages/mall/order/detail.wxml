<view class="container"><block wx:if="{{loading&&!showOrderHere}}"><view class="loading"><view class="loading-spinner"></view><text class="loading-text">正在跳转到订单详情页...</text></view></block><block wx:if="{{showOrderHere&&orderData}}"><block><custom-nav-bar vue-id="a69e163c-1" title="订单详情" show-back="{{true}}" bind:__l="__l"></custom-nav-bar><view class="detail-box"><view class="order-title">{{"订单号："+orderData.id}}</view><view class="order-info">{{"金额：¥"+(orderData.totalAmount||orderData.payAmount||0)}}</view><view class="order-info">{{"状态："+$root.m0}}</view><view class="order-info">{{"创建时间："+$root.m1}}</view><block wx:if="{{orderData.address}}"><view class="order-info">{{"收货地址："+orderData.address}}</view></block><block wx:if="{{orderData.phone}}"><view class="order-info">{{"联系电话："+orderData.phone}}</view></block><view class="order-items"><view class="item-title">商品明细</view><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item-row"><text>{{item.productName+" × "+item.quantity}}</text><text>{{"¥"+item.price*item.quantity}}</text></view></block></view><view class="actions"><block wx:if="{{orderData.status===0}}"><button data-event-opts="{{[['tap',[['payOrder',['$event']]]]]}}" class="btn" bindtap="__e">支付</button></block><block wx:if="{{orderData.status===0}}"><button data-event-opts="{{[['tap',[['cancelOrder',['$event']]]]]}}" class="btn cancel" bindtap="__e">取消</button></block><block wx:if="{{orderData.status===1}}"><button data-event-opts="{{[['tap',[['completeOrder',['$event']]]]]}}" class="btn complete" bindtap="__e">确认收货</button></block></view></view></block></block><block wx:if="{{!loading&&!orderData&&showOrderHere}}"><view class="empty"><text class="empty-text">未找到订单信息</text><view class="empty-desc">{{"订单ID: "+id}}</view><button data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-btn" bindtap="__e">返回</button></view></block></view>